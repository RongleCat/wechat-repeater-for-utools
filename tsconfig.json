{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "package",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015",
      "es2017",
      "ES2019"
    ],
    "rootDir": "./",
    "types": [
      "node",
      "utools-api-types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./window/src"
      ],
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}